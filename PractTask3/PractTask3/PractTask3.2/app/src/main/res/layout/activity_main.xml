<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:gravity="center">

    <Button
        android:id="@+id/startHandlerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Handler" />

    <TextView
        android:id="@+id/handlerMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Зміна повідомлення при натисненні кнопки"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/backgroundTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Повідомлення з'явиться тут з фонового потоку"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/handlerMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отримання повідомлення"
        android:layout_marginTop="20dp" />

</LinearLayout>