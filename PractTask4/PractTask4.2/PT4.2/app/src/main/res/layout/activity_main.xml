<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/buttonAccelerometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Акселерометр"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonGyroscope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гіроскоп"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonMagnetometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Магнітометр"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accel X: 0.0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accel Y: 0.0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accel Z: 0.0"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_foreground" />

</LinearLayout>